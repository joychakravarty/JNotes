<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="408.0" prefWidth="601.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jc.jnotes.viewcontroller.NotesController">
   <center>
      <TableView fx:id="notesTable" editable="true" prefHeight="255.0" prefWidth="601.0">
        <columns>
          <TableColumn fx:id="keyColumn" prefWidth="301.0" />
          <TableColumn fx:id="valueColumn" prefWidth="298.0" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
   <top>
      <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <items>
            <MenuButton fx:id="menuButton" mnemonicParsing="false" text="Menu">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#showAbout" text="About" />
                <MenuItem mnemonicParsing="false" onAction="#exitJNote" text="Exit">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="Q" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
                     </accelerator></MenuItem>
              </items>
            </MenuButton>
            <HBox prefHeight="28.0" prefWidth="284.0" />
            <TextField fx:id="searchField" prefHeight="27.0" prefWidth="223.0" />
         </items>
      </ToolBar>
   </top>
   <bottom>
      <AnchorPane prefHeight="101.0" prefWidth="601.0" BorderPane.alignment="CENTER">
         <children>
            <TextArea fx:id="infoField" editable="false" layoutX="4.0" layoutY="3.0" prefHeight="96.0" prefWidth="495.0" />
            <Button fx:id="newButton" layoutX="534.0" layoutY="1.0" onAction="#addNewNoteEntry" text="New" />
            <Button fx:id="editButton" layoutX="536.0" layoutY="37.0" onAction="#editNewNoteEntry" text="Edit" />
            <Button fx:id="deleteButton" layoutX="528.0" layoutY="68.0" onAction="#deleteNoteEntry" text="Delete" />
         </children>
      </AnchorPane>
   </bottom>
</BorderPane>
