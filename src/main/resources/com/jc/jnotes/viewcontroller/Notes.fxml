<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jc.jnotes.viewcontroller.NotesController">
   <center>
      <TableView fx:id="notesTable" editable="true" prefHeight="346.0" prefWidth="596.0">
        <columns>
          <TableColumn fx:id="keyColumn" minWidth="50.0" prefWidth="300.0" />
          <TableColumn fx:id="valueColumn" minWidth="50.0" prefWidth="300.0" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
   <top>
      <ToolBar prefHeight="41.0" prefWidth="384.0" BorderPane.alignment="CENTER">
         <items>
            <MenuButton fx:id="menuButton" mnemonicParsing="false" prefHeight="29.0" prefWidth="50.0">
              <items>
                  <Menu mnemonicParsing="false" text="Note">
                    <items>
                    <MenuItem mnemonicParsing="false" onAction="#addNewNoteEntry" text="New">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="N" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
                           </accelerator>
                        </MenuItem>
                        <MenuItem mnemonicParsing="false" onAction="#editNoteEntry" text="Edit">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="E" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
                           </accelerator>
                        </MenuItem>
                        <MenuItem mnemonicParsing="false" onAction="#deleteNoteEntry" text="Delete">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="D" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
                           </accelerator>
                        </MenuItem>
                    </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Profile">
                     <items>
                        <MenuItem mnemonicParsing="false" onAction="#addNewProfile" text="New" />
                        <MenuItem mnemonicParsing="false" onAction="#renameProfile" text="Rename" />
                        <MenuItem mnemonicParsing="false" onAction="#deleteProfile" text="Delete" />
                        <MenuItem mnemonicParsing="false" onAction="#importProfile" text="Import">
                        	<accelerator>
                              <KeyCodeCombination alt="UP" code="I" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
                           </accelerator>
                        </MenuItem>
                        <MenuItem mnemonicParsing="false" onAction="#exportProfile" text="Export">
                            <accelerator>
                              <KeyCodeCombination alt="UP" code="X" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
                           	</accelerator>
                        </MenuItem>
                     </items>
                  </Menu>
                <MenuItem mnemonicParsing="false" onAction="#showAbout" text="About" />
                <MenuItem mnemonicParsing="false" onAction="#exitJNote" text="Exit">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="Q" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
                     </accelerator>
                  </MenuItem>
              </items>
               <graphic>
                  <ImageView fitHeight="19.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../../images/menu-24.png" />
                     </image>
                  </ImageView>
               </graphic>
            </MenuButton>
            <ComboBox fx:id="profileComboBox" prefHeight="27.0" prefWidth="214.0" />
            <HBox prefHeight="29.0" prefWidth="110.0">
               <children>
                  <ToggleButton fx:id="sortToggleButton" mnemonicParsing="false" onAction="#sortByModificationDate" prefHeight="27.0" prefWidth="25.0">
                      <graphic>
	                      <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
	                          <image>
	                              <Image url="@../../../../images/sort-16.png" />
	                          </image>
	                      </ImageView>
	                  </graphic>
                     <tooltip>
                        <Tooltip text="Sort by modification time" />
                     </tooltip>
                  </ToggleButton>
               </children></HBox>
            <TextField fx:id="searchField" prefHeight="27.0" prefWidth="350.0" />
            <CheckBox fx:id="searchAllCheckBox" mnemonicParsing="false" />
         </items>
      </ToolBar>
   </top>
   <bottom>
      <AnchorPane prefHeight="150.0" prefWidth="500.0" BorderPane.alignment="CENTER">
         <children>
            <TextArea fx:id="infoField" editable="false" layoutX="4.0" layoutY="-7.0" prefHeight="83.0" prefWidth="476.0" AnchorPane.bottomAnchor="25.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0" />
            <Text fx:id="notificationText" layoutX="5.0" layoutY="141.0" strokeType="OUTSIDE" strokeWidth="0.0" wrappingWidth="600.0" />
         </children>
      </AnchorPane>
   </bottom>
</BorderPane>
