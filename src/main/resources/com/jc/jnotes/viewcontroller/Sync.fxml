<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane id="AnchorPane" prefHeight="169.0" prefWidth="291.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jc.jnotes.viewcontroller.SyncController">
   <children>
      <RadioButton fx:id="newUserRadioButton" layoutX="13.0" layoutY="14.0" mnemonicParsing="false" selected="true" text="New User">
         <toggleGroup>
            <ToggleGroup fx:id="toggleGroup" />
         </toggleGroup></RadioButton>
      <RadioButton fx:id="existingUserRadioButton" layoutX="107.0" layoutY="14.0" mnemonicParsing="false" text="Existing User" toggleGroup="$toggleGroup" />
      <TextField fx:id="userIdTextField" layoutX="16.0" layoutY="44.0" prefHeight="27.0" prefWidth="215.0" promptText="UserId [example: joynotes]" AnchorPane.bottomAnchor="95.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0">
         <tooltip>
            <Tooltip text="Your data will be stored under your UserId in cloud." />
         </tooltip></TextField>
      <TextField fx:id="userSecretTextField" layoutX="16.0" layoutY="85.0" prefHeight="27.0" prefWidth="215.0" promptText="Secret [example MySecret123]" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0">
         <tooltip>
            <Tooltip text="Your secret will be used to encrypt/decrypt your data. Secret is NOT stored in cloud." />
         </tooltip></TextField>
      <Button fx:id="connectButton" layoutX="11.0" layoutY="125.0" mnemonicParsing="false" onAction="#connectDisconnect" prefHeight="27.0" prefWidth="91.0" text="Connect" AnchorPane.leftAnchor="8.0" />
      <Button fx:id="backupButton" layoutX="107.0" layoutY="125.0" mnemonicParsing="false" prefHeight="27.0" prefWidth="72.0" text="Backup" />
      <Button fx:id="restoreButton" layoutX="185.0" layoutY="125.0" mnemonicParsing="false" prefHeight="27.0" prefWidth="98.0" text="Restore" AnchorPane.leftAnchor="185.0" AnchorPane.rightAnchor="8.0" />
   </children>
</AnchorPane>
